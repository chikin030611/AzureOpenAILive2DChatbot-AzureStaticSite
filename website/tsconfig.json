{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@framework/*": ["../Framework/src/*"]
    },
    "skipLibCheck": true // Add this line
  },
  "include": [
    "src/**/*.ts",
    "Core/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
